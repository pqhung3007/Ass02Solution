@page
@model Ass02Solution.Pages.Manage.Categories.IndexModel
@{
}

<h1>Categories Management</h1>
<a class="btn btn-primary" asp-page="./Add">Create new</a>

<table class="table table-hover">
    <thead>
        <tr class="table-primary">
            <td>Name</td>
            <th>Description</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var item in Model.Categories)
            {
                <tr>
                    <td>@item.CategoryName</td>
                    <td>@item.Description</td>
                    <td>

                        <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@item.CategoryId">Edit</a>
                        <a class="btn btn-danger" asp-page="./Delete" asp-route-id="@item.CategoryId">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>