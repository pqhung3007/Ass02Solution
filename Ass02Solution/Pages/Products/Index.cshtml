@page
@model Ass02Solution.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Pizza Menu</h1>
<div class="container">
    <div class="mb-3">
        <form method="get">
            <div class="d-flex">
                <input type="text" class="form-control" asp-for="pizza" placeholder="Search pizza">
                <button type="submit" class="w-25 btn btn-primary mx-2">Search</button>
            </div>
        </form>
    </div>

    <div class="row">
        @foreach (var item in Model.Product)
        {
            <div class="col-md-4 col-sm-6 d-flex">
                <div class="card my-5">
                    <a>
                        <img src="https://nomoneynotime.com.au/uploads/recipes/shutterstock_2042520416-1.jpg" class="card-img-top" />
                    </a>
                    <div class="card-body d-flex flex-column justify-content-between p-3">
                        <div class="d-flex justify-content-between align-items-baseline">
                            <h5 class="card-title">
                                <a class="text-decoration-none" asp-page="./Product/Detail" asp-route-id="@item.ProductName">@item.ProductName</a>
                            </h5>
                            <small class="fs-5">$@item.UnitPrice</small>
                        </div>
                            <p class="card-text fw-bold fs-6">
                                Category: @item.Category.CategoryName
                            </p>
                            <p>@item.Category.Description</p>
                            
                            <a href="/Products/Cart?Id=@item.ProductId" class="btn btn-primary">Add Pizza</a>
                    </div>
                </div>
            </div>
        }

        @if (Model.Product.Count == 0)
        {
            <div class="alert alert-warning" role="alert">
                No item found
            </div>
        }

    </div>

